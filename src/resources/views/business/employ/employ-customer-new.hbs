<div class="container-fluid overflow-hidden">
    <div class="row vh-100 overflow-auto">
        <div class="col-12 col-sm-3 col-xl-2 px-sm-2 px-0 bg-blue-logo d-flex sticky-top">
            <div class="d-flex flex-sm-column flex-row flex-grow-1 align-items-center align-items-sm-start px-3 pt-2">
                <a href="/" class="d-flex justify-content-center align-items-center pb-sm-3 mb-md-0 text-decoration-none w-100 text-light border-bottom">
					{{!-- <img src="/img/96x96.png" alt="" width="40px;" height="40px;">&nbsp; --}}
					<span class="d-none d-sm-inline fs-6 text-uppercase">Bảng điều khiển</span>
					{{!-- <span class="fs-6 text-uppercase">
						<img src="/img/96x96.png" alt="" width="28px;" height="28px;">&nbsp;
					</span> --}}
                </a>
                <ul class="nav nav-pills flex-sm-column flex-row flex-nowrap flex-shrink-1 flex-sm-grow-0 flex-grow-1 mb-sm-auto mb-0 justify-content-center align-items-center align-items-sm-start w-100 mt-2" id="menu">
                    <li class="nav-item hover w-100 mb-2">
                        <a href="/business/employ/customers/new" class="nav-link px-sm-0 px-2 rounded-pill text-light active">
                            <i class="ti-user ms-3 mr-3"></i><span class="ms-1 d-none d-sm-inline">Khách hàng</span></a>
                    </li>
                    <li class="nav-item hover w-100 mb-2">
                        <a href="/business/employ/schedules" class="nav-link px-sm-0 px-2 rounded-pill text-light">
                            <i class="ti-receipt ms-3 mr-3"></i><span class="ms-1 d-none d-sm-inline">Lịch hẹn tư vấn</span>
                        </a>
                    </li>
					<li class="nav-item hover w-100">
                        <a href="/business/employ/service-note" class="nav-link px-sm-0 px-2 rounded-pill text-light">
                            <i class="ti-clipboard ms-3 mr-3"></i><span class="ms-1 d-none d-sm-inline">Phiếu dịch vụ</span></a>
                    </li>
                </ul>
                <div class="dropdown py-sm-4 mt-sm-auto ms-auto ms-sm-0 flex-shrink-1 w-100 hover">
                    <a href="#" class="d-flex align-items-center text-light text-decoration-none dropdown-toggle w-100 rounded-pill p-2 border" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        {{#if user.image.name}}
						<img src="{{user.image.url}}" alt="hugenerd" width="28" height="28" class="rounded-circle">
                        {{else}}
						<img src="/img/user-ray.png" alt="hugenerd" width="28" height="28" class="rounded-circle">
						{{/if}}
						<span class="d-none d-sm-inline mx-1">{{user.firstName}} {{user.lastName}}</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-light text-small shadow w-100" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="/business/employ/profile">Thông tin cá nhân</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
							<form method="POST" action="/logout">
								<button class="dropdown-item" type="submit">Đăng xuất</>
							</form>
						</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col d-flex flex-column h-sm-100 ps-0 pe-0">
			<div class="" style="width: 100%;">
				<div class="sticky-top ps-0 pe-0 bg-blue-logo">
					<div class="text-center border-bottom">
						<div class="text-light text-uppercase fw-bold pt-2 pb-2">
							{{this.title}}
						</div>
					</div>
				</div>
				<ul class="nav nav-pills flex-xl-row flex-lg-row flex-md-row flex-sm-column border-bottom p-2 ms-0" id="pills-tab" role="tablist">
					<li class="nav-item" role="presentation">
						<a href="/business/employ/customers/new" class="nav-link active btn-sm rounded-pill">
							Khách mới
						</a>
					</li>
					<li class="nav-item" role="presentation">
						<a href="/business/employ/customers/potential" class="nav-link btn-sm rounded-pill">
							Khách tiềm năng
						</a>
					</li>
					<li class="nav-item" role="presentation">
						<a href="/business/employ/customers/schedule" class="nav-link btn-sm rounded-pill">
							Khách đặt lịch
						</a>
					</li>
					<li class="nav-item" role="presentation">
						<a href="/business/employ/customers/discharge-from-hospital" class="nav-link btn-sm rounded-pill">
							Khách chăm sóc hậu phẫu
						</a>
					</li>
					<li class="nav-item" role="presentation">
						<a href="/business/employ/customers/done" class="nav-link btn-sm rounded-pill">
							Khách hoàn thành
						</a>
					</li>
					<li class="nav-item" role="presentation">
						<a href="/business/employ/customers/notok" class="nav-link btn-sm rounded-pill">
							Khách tư vấn không thành công
						</a>
					</li>
				</ul>
				<div class="redirect-bar d-flex justify-content-between" style="height: 48px;">
					<div></div>
					<a href="/business/employ/customers/create" type="button" class="btn btn-sm text-light btn-primary rounded-pill mt-2 ml-2 mb-2 mr-3">Tạo khách hàng</a>
				</div>
				<div class="ps-2 pe-2">
					<table id="customerNew" class="table table-striped table-hover table-sm table-bordered table-sm">
						<thead>
							<tr>
								<th class="text-center">#</th>
								<th class="text-center">Họ tên</th>
								<th class="text-center">Số điện thoại</th>
								<th class="text-center">Nguồn</th>
								<th class="text-center">Ngày tạo</th>
								<th class="text-center">Ghi chú</th>
								<th class="text-center">Trạng thái</th>
								<th class="text-center">Hành động</th>
							</tr>
						</thead>
						<tbody id="table-content">
							{{#each customersNew}}
							<tr class="text-dark">
								<th class="text-center" scope="row">{{sum @index 1}}</th>
								<td><a class="link-primary" href="/business/employ/customers/{{this._id}}/detail">{{this.nickName}} - {{this.fullName}}</a></td>
								<td class="text-center">0{{this.phone}}</td>
								<td class="text-center">{{this.resource}}</td>
								<td class="text-center">{{formatDate this.createdAt}}</td>
								<div data-bs-toggle="tooltip" data-bs-placement="top" title="{{this.description}}">
									<td class="text-nowrap">
										{{cutPassword this.description 16}}
									</td>
								</div>
								<td class="text-center">{{this.statusCus.statusVi}}</td>
								<td class="text-center">
									<a href="/business/employ/customers/{{this._id}}/edit" type="button" class="btn btn-info btn-sm border">
										<div data-bs-toggle="tooltip" data-bs-placement="top" title="Sửa thông tin khách hàng">
											<i class="ti-pencil-alt"></i>
										</div>
									</a>
									<!-- Example single danger button -->
									<button class="btn btn-primary btn-sm border" data-bs-toggle="dropdown" aria-expanded="false">
										<div data-bs-toggle="tooltip" data-bs-placement="top" title="Chuyển trạng thái">
											<i class="fa-solid fa-arrow-right-arrow-left"></i>
										</div>
									</button>
									<ul class="dropdown-menu">
										<li>
											<form id="customer-potential-form" method="POST" action="/business/employ/customers/{{this._id}}/potential?_method=PATCH">
												<button type="submit" class="dropdown-item border" data-potential="Potential" data-cusID="{{this._id}}">Tiềm năng</button>
											</form>
										</li>
										<li><hr class="dropdown-divider"></li>
										<li>
											<form id="customer-notOK-form" method="POST" action="/business/employ/customers/{{this._id}}/notOK?_method=PATCH">
												<button type="submit" class="dropdown-item" data-notOK="NotOK" data-cusID="{{this._id}}">Không thành công</button>
											</form>
										</li>
									</ul>
								</td>
							</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
				
			</div>
		</div>
	</div>
</div>
