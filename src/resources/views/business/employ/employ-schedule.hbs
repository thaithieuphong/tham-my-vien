<div class="container-fluid overflow-hidden">
    <div class="row vh-100 overflow-auto">
        <div class="col-12 col-sm-3 col-xl-2 px-sm-2 px-0 bg-dark d-flex sticky-top">
            <div class="d-flex flex-sm-column flex-row flex-grow-1 align-items-center align-items-sm-start px-3 pt-2 text-white">
                <a href="/" class="d-flex align-items-center pb-sm-3 mb-md-0 text-white text-decoration-none">
					{{!-- <img src="/img/96x96.png" alt="" width="40px;" height="40px;">&nbsp; --}}
					<span class="fs-6 text-uppercase">
						<img src="/img/96x96.png" alt="" width="28px;" height="28px;">&nbsp;
						<span class="d-none d-sm-inline">Bảng điều khiển</span>
					</span>
                </a>
                <ul class="nav nav-pills flex-sm-column flex-row flex-nowrap flex-shrink-1 flex-sm-grow-0 flex-grow-1 mb-sm-auto mb-0 justify-content-center align-items-center align-items-sm-start" id="menu">
                    <li class="nav-item">
                        <a href="/business/employ/schedules" class="nav-link px-sm-0 px-2 link-light">
                            <i class="ti-receipt mr-3"></i><span class="ms-1 d-none d-sm-inline">Lịch hẹn tư vấn</span>
                        </a>
                    </li>
                    <li>
                        <a href="/business/employ/customers/new" class="nav-link px-sm-0 px-2 link-light">
                            <i class="ti-user mr-3"></i><span class="ms-1 d-none d-sm-inline">Khách hàng</span></a>
                    </li>
					<li>
                        <a href="/business/employ/service-note" class="nav-link px-sm-0 px-2 link-light">
                            <i class="ti-clipboard mr-3"></i><span class="ms-1 d-none d-sm-inline">Phiếu dịch vụ</span></a>
                    </li>
                </ul>
                <div class="dropdown py-sm-4 mt-sm-auto ms-auto ms-sm-0 flex-shrink-1">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        {{#if user.image.name}}
						<img src="{{user.image.url}}" alt="hugenerd" width="28" height="28" class="rounded-circle">
                        {{else}}
						<img src="/img/user-ray.png" alt="hugenerd" width="28" height="28" class="rounded-circle">
						{{/if}}
						<span class="d-none d-sm-inline mx-1">{{user.firstName}} {{user.lastName}}</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-light text-small shadow" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="/business/employ/profile">Thông tin cá nhân</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
							<form method="POST" action="/logout">
								<button class="dropdown-item" type="submit">Đăng xuất</>
							</form>
						</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col d-flex flex-column h-sm-100 ps-0 pe-0">
			<div class="sticky-top ps-0 pe-0">
				<div class="text-center bg-blue border-bottom">
					<div class="text-light text-uppercase fw-bold pt-2 pb-2">
						{{this.title}}
					</div>
				</div>
			</div>
			<div class="bg-blue d-flex justify-content-between">
				<a class="btn btn-danger text-light ms-2 mt-2 mb-2" href="/business/employ/schedules/trash">
					Thùng rác <i class="ti-trash"></i>
				</a>
			</div>
			<div class="pb-3 ps-2 pe-2" style="width: 100%;">
				<table id="table-schedule" class="table table-sm display">
					<thead>
						<tr class="text-center">
							<th scope="col">#</th>
							<th scope="col">Họ tên khai sinh</th>
							<th scope="col">Tên thường gọi</th>
							<th scope="col">Ngày hẹn</th>
							<th scope="col">Đã cọc</th>
							<th scope="col">Tổng chi phí khi tư vấn</th>
							<th scope="col">Tác vụ</th>
						</tr>
					</thead>
					<tbody class="">
						{{#each schedules}}
							<tr>
								<th scope="row" class="text-center"><strong>{{sum @index 1}}</strong></th>
								<td>{{this.customerID.fullName}}</td>
								<td>
									<a id="schedule-detail" type="button" class="link-primary" data-bs-toggle="modal" data-bs-target="#detailScheduleModal"
									data-customer-fullName="{{this.customerID.fullName}}" data-customer-nickName="{{this.customerID.nickName}}" data-customer-birth="{{this.customerID.birth}}"
									data-customer-gender="{{this.customerID.gender}}" data-customer-phone="{{this.customerID.phone}}" data-schedule="{{this.schedule}}" data-service="{{this.service}}"
									data-deposit="{{this.deposit}}" data-priceBefore="{{this.priceBefore}}" data-img="{{this.customerID.img.url}}"data-customer-resource="{{this.customerID.resource}}"
									data-customer-user="{{#each this.customerID}}{{this.firstName}} {{this.lastName}}{{/each}}">
										{{this.customerID.nickName}}
									</a>
								</td>
								<td>{{formatDate this.schedule}}</td>
								<td class="text-warning">{{this.deposit}}</td>
								<td class="text-danger">{{this.priceBefore}}</td>
								<td class="d-flex justify-content-center">
									<div data-bs-toggle="tooltip" data-bs-placement="top" title="Sửa lịch hẹn" class="me-1">
										<a href="/business/employ/schedule/{{this._id}}/edit" type="button" class="btn btn-info btn-sm">
											<i class="ti-pencil-alt"></i>
										</a>
									</div>
									<div data-bs-toggle="tooltip" data-bs-placement="top" title="Tạo phiếu dịch vụ" class="me-1">
										<form method="POST" action="/business/employ/schedule/{{this._id}}/service-note/create">
											<input type="text" name="customerID" value="{{this.customerID._id}}" hidden>
											<button type="submit" class="btn btn-primary btn-sm text-light">
												<i class="ti-clipboard"></i>
											</button>
										</form>
									</div>
									<div data-bs-toggle="tooltip" data-bs-placement="top" title="Hủy lịch hẹn">
										<button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteScheduleModal" data-schedule-id="{{this._id}}"
										data-customer="{{this.customerID.nickName}}" data-customer-id="{{this.customerID._id}}">
											<i class="ti-close"></i>
										</button>
									</div>
								</td>
							</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="detailScheduleModal" tabindex="-1" aria-labelledby="detailScheduleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-scrollable">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="detailScheduleModalLabel">Chi tiết lịch hẹn tư vấn</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="text-center mb-3">
					<img src="" id="add-avt" class="rounded add-avata" alt="...">
				</div>
				<div class="d-flex justify-content-between">
					<label for="fullName">
						<strong>Họ tên khai sinh:</strong>&nbsp;
					</label>
					<label class="text-end font-italic" id="schedule-fullName"></label>
				</div>
				<div class="d-flex justify-content-between">
					<label for="nickName">
						<strong>Tên thường gọi:</strong>&nbsp;
					</label>
					<label class="text-end font-italic" id="schedule-nickName"></label>
				</div>
				<div class="d-flex justify-content-between">
					<label for="birth">
						<strong>Ngày sinh:</strong>&nbsp;
					</label>
					<label id="schedule-birth"></label>
				</div>
				<div class="d-flex justify-content-between">
					<label for="gender">
						<strong>Giới tính:</strong>&nbsp;
					</label>
					<label id="schedule-gender"></label>
				</div>
				<div class="d-flex justify-content-between">
					<label for="phone">
						<strong>Số điện thoại:</strong>&nbsp;
					</label>
					<label id="schedule-phone"></label>
				</div>
				<div class="d-flex justify-content-between">
					<label for="status">
						<strong>Nguồn:</strong>&nbsp;
					</label>
					<label id="schedule-resource"></label>
				</div>
				<div class="d-flex justify-content-between">
					<label for="status">
						<strong>Người tạo:</strong>&nbsp;
					</label>
					<label id="schedule-user"></label>
				</div>
				<div class="d-flex justify-content-between">
					<label for="status">
						<strong>Thời gian hẹn:</strong>&nbsp;
					</label>
					<label id="schedule-schedule"></label>
				</div>
				<label class="" for="schedule-schedule"><strong>Dịch vụ đã chọn:</strong></label>
				<div id="wrapper" class="mb-3">
					
				</div>
				<div class="d-flex justify-content-between">
					<label for="status">
						<strong>Đặt cọc:</strong>&nbsp;
					</label>
					<label id="schedule-deposit" class="text-info"></label>
				</div>
				<div class="d-flex justify-content-between">
					<label for="status">
						<strong>Tổng chi phí khi tư vấn:</strong>&nbsp;
					</label>
					<label id="schedule-priceBefore" class="text-danger"></label>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
			</div>
		</div>
	</div>
</div>

<!-- Modal delete schedule -->
<div class="modal fade" id="deleteScheduleModal" tabindex="-1" aria-labelledby="deleteScheduleLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header bg-danger">
				<h5 class="modal-title text-light" id="deleteScheduleLabel">Hủy lịch hẹn</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form id="deleteScheduleForm" method="POST">
					<input id="delete-schedule-customer-id" type="text" name="customerID" hidden>
					Bạn chắc chắn muốn hủy lịch hẹn của khách <strong id="delete-schedule-customer"></strong>
				</form>
			</div>
			<div class="modal-footer">
				<button id="deleteScheduleBtn" type="button" class="btn btn-danger">Có, chắc chắn</button>
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
			</div>
		</div>
	</div>
</div>

<script src="/js/business/business-employ-calendar.js"></script>