<div class="sticky-top pe-0 ps-0">
    <div class="text-center bg-blue border-bottom">
        <div class="text-light text-uppercase fw-bold pt-2 pb-2">
            {{this.title}}
        </div>
    </div>
</div>
<div class="d-flex">
    {{> page/sidebar/business/employ/sidebar-business-employ-customers}}
    <div class="container-content-scroll" style="width: 100%; height: 92.6vh">
		<div class="redirect-bar d-flex justify-content-between" style="height: 48px;">
			<div></div>
			<a href="/business/employ/customers/create" type="button" class="btn btn-sm text-light btn-primary rounded-pill mt-2 ml-2 mb-2 mr-3 border">Tạo khách hàng</a>
		</div>
        <div class="ps-2 pe-2">
			<table id="customerSchedule" class="table table-striped table-hover table-sm table-bordered display">
				<thead class="bg-blue">
					<tr class="text-light">
						<th class="text-center">#</th>
						<th class="text-center">Họ tên</th>
						<th class="text-center">Số điện thoại</th>
						<th class="text-center">Nguồn</th>
						<th class="text-center">Ngày tạo</th>
						<th class="text-center">Ghi chú</th>
						<th class="text-center">Trạng thái</th>
						<th class="text-center">Hành động</th>
					</tr>
				</thead>
				<tbody id="table-content">
					{{#each customersSchedule}}
					<tr class="text-dark">
						<th class="text-center" scope="row">{{sum @index 1}}</th>
						<td><a class="link-primary" href="/business/employ/customers/{{this._id}}/detail">{{this.nickName}} - {{this.fullName}}</a></td>
						<td class="text-center">0{{this.phone}}</td>
						<td class="text-center">{{this.resource}}</td>
						<td class="text-center">{{formatDate this.createdAt}}</td>
						<td class="text-nowrap">
							<div data-bs-toggle="tooltip" data-bs-placement="top" title="{{this.description}}">
								{{cutPassword this.description 16}}
							</div>
						</td>
						<td class="text-center">{{this.statusCus.statusVi}}</td>
						<td class="text-center">
							<a href="/business/employ/customers/{{this._id}}/edit" type="button" class="btn btn-info btn-sm border">
								<div data-bs-toggle="tooltip" data-bs-placement="top" title="Sửa thông tin khách hàng">
									<i class="ti-pencil-alt"></i>
								</div>
							</a>
							<button class="btn btn-primary btn-sm border" data-bs-toggle="dropdown" aria-expanded="false">
								<div data-bs-toggle="tooltip" data-bs-placement="top" title="Chuyển trạng thái">
									<i class="fa-solid fa-arrow-right-arrow-left"></i>
								</div>
							</button>
							<ul class="dropdown-menu">
								<li>
									<form id="customer-potential-form" method="POST" action="/business/employ/customers/{{this._id}}/potential?_method=PATCH">
										<button type="submit" class="dropdown-item" data-potential="Potential" data-cusID="{{this._id}}">Tiềm năng</button>
									</form>
								</li>
								<li><hr class="dropdown-divider"></li>
								<li>
									<form id="customer-notOK-form" method="POST" action="/business/employ/customers/{{this._id}}/notOK?_method=PATCH">
										<button type="submit" class="dropdown-item" data-notOK="NotOK" data-cusID="{{this._id}}">Không thành công</button>
									</form>
								</li>
							</ul>
							<a href="/business/employ/customers/{{this._id}}/schedule/create" class="btn btn-success border btn-sm">
								<div data-bs-toggle="tooltip" data-bs-placement="top" title="Đặt lịch">
									<i class="ti-calendar"></i>
								</div>
							</a>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
		<ul class="nav nav-pills flex-xl-row flex-lg-row flex-md-row flex-sm-column bg-blue fixed-bottom" style="margin-left: 260px;" id="pills-tab" role="tablist">
			<li class="nav-item" role="presentation">
				<a href="/business/employ/customers/new" class="nav-link text-white">
					Khách mới
				</a>
			</li>
			<li class="nav-item" role="presentation">
				<a href="/business/employ/customers/potential" class="nav-link text-white">
					Khách tiềm năng
				</a>
			</li>
			<li class="nav-item" role="presentation">
				<a href="/business/employ/customers/schedule" class="nav-link active text-white">
					Khách đặt lịch
				</a>
			</li>
			<li class="nav-item" role="presentation">
				<a href="/business/employ/customers/discharge-from-hospital" class="nav-link text-white">
					Khách xuất viện
				</a>
			</li>
			<li class="nav-item" role="presentation">
				<a href="/business/employ/customers/done" class="nav-link text-white">
					Khách hoàn thành
				</a>
			</li>
			<li class="nav-item" role="presentation">
				<a href="/business/employ/customers/notok" class="nav-link text-white">
					Khách tư vấn không thành công
				</a>
			</li>
		</ul>
	</div>
</div>

