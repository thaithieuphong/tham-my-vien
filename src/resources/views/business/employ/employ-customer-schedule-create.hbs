<div class="d-flex">
    {{> page/sidebar/business/employ/sidebar-business-employ-customers}}
    <div class="container-content-scroll" style="width: 100%; height: 92.6vh">
        <div class="ps-2 pe-2">
			<table id="customerSchedule" class="table table-striped table-hover table-sm table-bordered display">
				<thead class="bg-blue">
					<tr class="text-light">
						<th class="text-center">#</th>
						<th class="text-center">Họ tên</th>
						<th class="text-center">Số điện thoại</th>
						<th class="text-center">Nguồn</th>
						<th class="text-center">Ngày tạo</th>
						<th class="text-center">Ghi chú</th>
						<th class="text-center">Trạng thái</th>
						<th class="text-center">Hành động</th>
					</tr>
				</thead>
				<tbody id="table-content">
					{{#each customersSchedule}}
					<tr class="text-dark">
						<th class="text-center" scope="row">{{sum @index 1}}</th>
						<td><a class="link-primary" href="/business/employ/customers/{{this._id}}/detail">{{this.nickName}} - {{this.fullName}}</a></td>
						<td class="text-center">0{{this.phone}}</td>
						<td class="text-center">{{this.resource}}</td>
						<td class="text-center">{{formatDate this.createdAt}}</td>
						<td class="text-nowrap">
							<div data-bs-toggle="tooltip" data-bs-placement="top" title="{{this.description}}">
								{{cutPassword this.description 16}}
							</div>
						</td>
						<td class="text-center">{{this.statusCus.statusVi}}</td>
						<td class="text-center">
							{{!-- <button type="button" class="btn btn-info btn-sm border" data-bs-toggle="modal"
								data-bs-target="#edit-customer-modal" data-id="{{this._id}}"
								data-edit-img="{{this.image.name}}" data-edit-nickname="{{this.nickName}}"
								data-edit-statusCus="{{this.statusCus.statusVi}}" data-edit-birth="{{this.birth}}"
								data-edit-gender="{{this.gender}}" data-edit-phone="{{this.phone}}"
								data-edit-email="{{this.email}}" data-edit-address="{{this.address}}"
								data-edit-resource="{{this.resource}}"
								data-edit-description="{{this.description}}"> --}}
							<a href="/business/employ/customers/{{this._id}}/edit" type="button" class="btn btn-info btn-sm border">
								<div data-bs-toggle="tooltip" data-bs-placement="top" title="Sửa thông tin khách hàng">
									<i class="ti-pencil-alt"></i>
								</div>
							</a>
							<button class="btn btn-primary btn-sm border" data-bs-toggle="dropdown" aria-expanded="false">
								<div data-bs-toggle="tooltip" data-bs-placement="top" title="Chuyển trạng thái">
									<i class="fa-solid fa-arrow-right-arrow-left"></i>
								</div>
							</button>
							<ul class="dropdown-menu">
								<li>
									<form id="customer-potential-form" method="POST" action="/business/employ/customers/{{this._id}}/potential?_method=PATCH">
										<button type="submit" class="dropdown-item" data-potential="Potential" data-cusID="{{this._id}}">Tiềm năng</button>
									</form>
								</li>
								<li><hr class="dropdown-divider"></li>
								<li>
									<form id="customer-notOK-form" method="POST" action="/business/employ/customers/{{this._id}}/notOK?_method=PATCH">
										<button type="submit" class="dropdown-item" data-notOK="NotOK" data-cusID="{{this._id}}">Không thành công</button>
									</form>
								</li>
							</ul>
							<button class="btn btn-success border btn-sm" data-bs-toggle="modal" data-schedule-id="{{this._id}}"
								data-schedule-img="{{this.image.name}}"
								data-schedule-nickname="{{this.nickName}}"
								data-schedule-birth="{{this.birth}}"
								data-schedule-gender="{{this.gender}}"
								data-schedule-phone="{{this.phone}}"
								data-schedule-email="{{this.email}}"
								data-schedule-address="{{this.address}}"
								data-schedule-description="{{this.description}}" {{#each
								this.serviceNoteID}} data-schedule-serviceID="{{this.service}}" {{/each}}
								data-bs-target="#create-schedule-modal">
								<div data-bs-toggle="tooltip" data-bs-placement="top" title="Đặt lịch hẹn tư vấn">
									<i class="ti-calendar"></i>
								</div>
							</button>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>

<!-- Modal Create Schedule -->
<div class="modal fade " id="create-schedule-modal" tabindex="-1" aria-labelledby="create-schedule"
	aria-hidden="true">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header bg-blue">
				<h5 class="modal-title text-light" id="create-schedule-title">Đặt lịch hẹn</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
					aria-label="Close"></button>
			</div>
			<div class="modal-body bg-blue">
				<ul class="nav nav-pills mb-3 bg-blue" id="pills-tab" role="tablist">
					<li class="nav-item" role="presentation">
						<button class="nav-link active text-light rounded-pill" id="pills-profile-customer-tab" data-bs-toggle="pill"
							data-bs-target="#pills-profile-customer" type="button" role="tab" aria-controls="pills-home"
							aria-selected="true">Thông tin khách hàng</button>
					</li>
					<li class="nav-item" role="presentation">
						<button class="nav-link text-light rounded-pill" id="pills-profile-tab" data-bs-toggle="pill"
							data-bs-target="#pills-service" type="button" role="tab" aria-controls="pills-profile"
							aria-selected="false">Thông tin dịch vụ</button>
					</li>
				</ul>
				<form method="POST" id="create-schedule-form" class="row" enctype="multipart/form-data">
					<div class="tab-content" id="pills-tabContent">
						<div class="tab-pane fade show active" id="pills-profile-customer" role="tabpanel"
							aria-labelledby="pills-home-tab">
							<ul class="list-group">
								<li class="list-group-item bg-blue">
									<input hidden type="text" class="form-control" id="create-schedule-customerID"
										name="customerID" readonly>
									<div class="row">
										<div class="col-md-4">
											<img src="/img/user-icon.png" id="create-schedule-img"
												class="rounded mx-auto d-block add-avata" alt="...">
											<div class="mt-4">
												<textarea id="create-schedule-description" class="form-control bg-transparent text-light mb-2"
													rows="6" style="background-color: white;" name="description"
													disabled></textarea>
											</div>
										</div>
										<div class="col-md-8">
											<div class="d-flex justify-content-between">
												<label for="status" class="text-light">
													<strong>Họ tên:</strong>&nbsp;
												</label>
												<label class="text-uppercase text-light text-end font-italic"
														id="create-schedule-nickName" name="name"></label>
											</div>
											<hr class="text-light">
											<div class="d-flex justify-content-between">
												<label for="status" class="text-light">
													<strong>Ngày sinh:</strong>&nbsp;
												</label>
												<label class="text-light" id="create-schedule-birth" name="birth"></label>
											</div>
											<div class="d-flex justify-content-between">
												<label for="status" class="text-light">
													<strong>Giới tính:</strong>&nbsp;
												</label>
												<label class="text-light" id="create-schedule-gender" name="gender"></label>
											</div>
											<div class="d-flex justify-content-between">
												<label for="status" class="text-light">
													<strong>Email:</strong>&nbsp;
												</label>
												<label id="create-schedule-email"
												class="d-inline-block text-truncate text-light" name="email"></label>
											</div>
											<div class="d-flex justify-content-between">
												<label for="status" class="text-light">
													<strong>Số điện thoại:</strong>&nbsp;
												</label>
												<label class="text-light" id="create-schedule-phone" name="phone"></label>
											</div>
											<div class="d-flex justify-content-between">
												<label for="status" class="text-light">
													<strong>Địa chỉ:</strong>&nbsp;
												</label>
												<label id="create-schedule-address" class="text-right text-light" name="address"></label>
											</div>
											<div class="d-flex justify-content-between">
												<label for="status" class="text-light">
													<strong>Người tạo:</strong>&nbsp;
												</label>
												<input hidden type="text" value="{{user._id}}" name="createName" id="">
												<label class="text-light" id="create-schedule-createName">{{user.firstName}}{{user.lastName}}</label>
											</div>
										</div>
									</div>
								</li>
							</ul>
						</div>
						<div class="tab-pane fade" id="pills-service" role="tabpanel"
							aria-labelledby="pills-profile-tab">
							<div class="form-group mb-3">
								<select id="select-service" class="chosen-select" multiple tabindex="6"
									name="service[]">
									{{#each typeservices}}
									<optgroup label="{{this.name}}">
										{{#each this.services}}
										<option value="{{this.service}}">{{this.service}}</option>
										{{/each}}
									</optgroup>
									{{/each}}
								</select>
							</div>

								<div id="list1" class="dropdown-check-list container-card" tabindex="100">
									<label class="anchor ">Chọn dịch vụ</label>
									<ul class="items">
										{{#each typeservices}}
										<li class="ml-3 mb-3">
											<strong>{{this.name}}</strong> 
										</li>
										{{#each this.services}}
										<li>
											<label class="form-check " for="{{this.service}}">
												<input type="checkbox" class="" id="{{this.service}}"
													value="{{this.service}}" name="service[]" />
												<label for="{{this.service}}">{{this.service}}</label>
											</label>
											<hr>
										</li>
										{{/each}}
										{{/each}}
									</ul>
								</div>
							<div class="form-floating mb-3">
								<input type="datetime-local" class="form-control bg-transparent text-light text-right" id="create-schedule-schedule" name="schedule">
								<label for="create-schedule-schedule" class="text-light">Ngày hẹn</label>
							</div>
							<div class="form-floating mb-3">
								<input type="text" class="form-control bg-transparent text-light text-right" id="create-schedule-priceBefore" name="priceBefore">
								<label for="create-schedule-priceBefore" class="text-light">Phí dịch vụ</label>
							</div>
							<div class="form-floating mb-3">
								<input type="text" class="form-control bg-transparent text-light text-right"
									id="create-schedule-deposit" name="deposit">
								<label for="create-schedule-deposit" class="text-light">Đặt cọc</label>
							</div>
							<div class="form-floating mb-3">
								<textarea class="form-control bg-transparent text-light" id="create-schedule-description" rows="6" name="comment"></textarea>
								<label for="create-schedule-description" class="text-light">Ghi chú</label>
							</div>
							<div class="preview-images-counselor row ml-0 text-center"></div>
							<label for="input-multi-images-counselor" class="label-avt d-flex justify-content-end" data-input-img-id="{{schedule._id}}">
								<h5 id="text-img-counselor" class="btn bg-secondary text-uppercase text-light btn-mobile rounded-pill"><i class="ti-cloud-up fw-bold pr-1"></i>Chọn ảnh trước tư vấn</h5>
							</label>
							<input id="input-multi-images-counselor" class="form-control" type="file" name="beforeCounselor" hidden multiple>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer bg-blue">
				<button type="button" id="create-schedule-btn" class="btn btn-primary rounded-pill border">Đặt lịch</button>
				<button type="button" class="btn btn-secondary rounded-pill border" data-bs-dismiss="modal">Đóng lại</button>
			</div>
		</div>
	</div>
</div>

