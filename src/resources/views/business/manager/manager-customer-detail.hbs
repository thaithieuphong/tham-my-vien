							<div class="row">
										{{#if customer.serviceNoteID}}
								<div class="col-xl-6 col-lg-6 col-md-6">
									<div class="row">
										{{#each customer.serviceNoteID}}
										{{#each this.counselorImg}}
										<div class="col-xl-6 col-lg-6 col-md-6 mb-2">
											<img src="/counselor/img/{{this}}" class="img-fluid"
												alt="...">
										</div>
										{{/each}}
										{{/each}}
										{{else}}
										<div class="mb-2">
											<h6>Chưa có ảnh</h6>
										</div>
										{{/if}}
									</div>
								</div>
								<div class="col-xl-6 col-lg-6 col-md-6">
									<div class="row">
										{{#if customer.serviceNoteID}}
										{{#each customer.serviceNoteID}}
										{{#each this.counselorVideo}}
										<div class="col-xl-6 col-lg-6 col-md-6 mb-2">
											<video class="img-fluid" src="/counselor/video/{{this}}" controls>
											</video>
										</div>
										{{/each}}
										{{/each}}
										{{else}}
										<div class="col-xl-6 col-lg-6 col-md-6 mb-2">
											<h6>Chưa có video</h6>
										</div>
										{{/if}}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="accordion-item">
					<h2 class="accordion-header" id="flush-headingTwo">
					<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
