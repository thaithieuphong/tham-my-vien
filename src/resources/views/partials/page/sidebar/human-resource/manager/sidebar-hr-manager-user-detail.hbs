
<div class="nav-mobile sidebar text-light">
	<ul class="nav-bottom sidebar-list">
		<li class="list">
			<a href="/human-resources/manager/users">
				<span class="nav-mobile-icon sidebar-icon"><i class="ti-user"></i></span>
				<span class="nav-text sidebar-text">Nhân viên</span>
			</a>
		</li>
		<li class="img-container">
			{{#if user.image.name}}
			<a href="/human-resources/manager/profile"><img src="/mnt/vdb/crm.drtuananh.vn/users/{{user.image.name}}" alt=""></a>
			{{else}}
			<a href="/human-resources/manager/profile"><img src="/img/user-icon.png" alt=""></a>
			{{/if}}
		</li>
	</ul>
</div>

<script>
	const list = document.querySelectorAll('.list');
	function activeTab(){
		list.forEach((item) =>
		item.classList.remove('active'));
		this.classList.add('active')
	}
	list.forEach((item) =>
	item.addEventListener('click',activeTab))
</script>
