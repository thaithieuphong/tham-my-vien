<link rel="stylesheet" href="/css/root.css">
<link rel="stylesheet" href="/css/assistant.css">
<div class="sticky-top">
	<nav class="navbar navbar-light bg-blue border-bottom">
		<a type="button" href="/operating-room/nursing/re-examination">
			<i class="fa-solid fa-circle-arrow-left text-light fs-3"></i>
		</a>
        <div class="text-light text-uppercase fw-bold">
            {{title}}
        </div>
		<div class="img-container">
		</div>
    </nav>
</div>
<div class="p-0">
	{{#if messages_createReExamination_success}}
	<div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
		{{messages_createReExamination_success}}
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
	{{/if}}
	{{#if reExam}}
		<div class="card bg-glass">
			<div class="card-body p-3">
				<div class="d-flex justify-content-between">
					<label for="status" class="text-nowrap text-light">
						<strong>Họ tên khai sinh:</strong>&nbsp;
					</label>
					<label class="fs-6 text-light text-right">
						{{reExam.customerID.fullName}}
					</label>
				</div>
				<div class="d-flex justify-content-between">
					<label for="status" class="text-nowrap text-light">
						<strong>Tên thường gọi:</strong>&nbsp;
					</label>
					<label class="fs-6 text-light text-right">
						{{reExam.customerID.nickName}}
					</label>
				</div>
				<div class="d-flex justify-content-between mb-2">
					<label for="status" class="text-nowrap text-light">
						<strong>Ngày hẹn:</strong>&nbsp;
					</label>
					<label for=""class="fs-6 text-success text-right">
						<em>{{formatDate reExam.schedule}}</em>
					</label>
				</div>
				<form method="POST" id="submit-reExamination-form" action="/operating-room/nursing/re-examination/{{reExam._id}}/update?_method=PUT" enctype="multipart/form-data">
					<input hidden type="text" value="{{reExam.customerID._id}}" name="customerID">
					<div class="row mb-4">
						<div class="col-md-4 mb-4">
							<label class="text-nowrap text-light">
								<strong>Chọn Bác sĩ:</strong>&nbsp;
							</label>
							<select class="w-100 bg-transparent" multiple="multiple" id="select-doctor" name="performer[]">
								{{#each doctors}}
								<option value="{{this._id}}">{{this.firstName}} {{this.lastName}}</option>
								{{/each}}
							</select>
						</div>
						<div class="col-md-4 mb-4">
							<label class="text-nowrap text-light">
								<strong>Chọn Điều dưỡng:</strong>&nbsp;
							</label>
							<select class="w-100 bg-transparent" multiple="multiple" id="select-nursing" name="nursing[]">
								{{#each nursings}}
								<option value="{{this._id}}">{{this.firstName}} {{this.lastName}}</option>
								{{/each}}
							</select>
						</div>
						<div class="col-md-4">
							<label class="text-nowrap text-light">
								<strong>Chọn Dẫn khách:</strong>&nbsp;
							</label>
							<select class="w-100 bg-transparent" multiple="multiple" id="select-recept" name="recept">
								{{#each nursings}}
								<option value="{{this._id}}">{{this.firstName}} {{this.lastName}}</option>
								{{/each}}
							</select>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="preview-images-reExamination row m-0 text-center"></div>
							<label for="input-multi-images-reExamination" class="label-avt d-flex justify-content-start" data-input-img-id="{{reExam._id}}">
								<h5 id="text-img-reExamination" class="btn bg-secondary text-uppercase text-light btn-mobile  rounded-pill"><i class="ti-cloud-up fw-bold pr-3"></i>Chọn ảnh tư vấn</h5>
							</label>
							<input id="input-multi-images-reExamination" class="form-control" type="file" name="reExamination" hidden multiple>
						</div>
						<div class="col-md-6">
							<div class="preview-videos-reExamination row m-0 text-center"></div>
							<label for="input-multi-videos-reExamination" class="label-avt d-flex justify-content-start" data-input-img-id="{{reExam._id}}">
								<h5 id="text-img-reExamination" class="btn bg-secondary text-uppercase text-light btn-mobile  rounded-pill"><i class="ti-cloud-up fw-bold pr-3"></i>Chọn video tư vấn</h5>
							</label>
							<input id="input-multi-videos-reExamination" class="form-control" type="file" name="reExamination" hidden multiple>
						</div>
						<div class="text-light">
							<label for="steps-to-take-area"><strong>Các bước thực hiện:</strong></label>
						</div>
						<div class="mb-4">
							<textarea class="form-control mr-3 pl-3 bg-transparent text-light" name="stepsToTake" cols="30" rows="8"></textarea>
						</div>
						<div>
							<button id="submit-reExamination-form-btn" class="btn btn-primary btn-mobile rounded-pill">CẬP NHẬT</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	{{else}}
	<div class="text-center">
		Chưa có phiếu phẩu thuật
	</div>
	{{/if}}
</div>

<script src="/js/operating/nursing-re-exam.js"></script>
<script>
document.addEventListener("DOMContentLoaded", function () {
	NiceSelect.bind(document.getElementById("select-doctor"), {searchable: true, Selection: 'Chọn bác sĩ'});
	NiceSelect.bind(document.getElementById("select-nursing"), {searchable: true});
	NiceSelect.bind(document.getElementById("select-recept"), {searchable: true});
})
</script>