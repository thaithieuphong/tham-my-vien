<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasWithBackdrop"
    aria-labelledby="offcanvasWithBackdropLabel">
    <div class="offcanvas-header bg-blue border-bottom">
        <h5 class="offcanvas-title text-white text-center" id="offcanvasWithBackdropLabel">BẢNG ĐIỀU KHIỂN</h5>
        <button type="button" class="btn-close text-reset btn-light" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body container-sidebar bg-blue">
        <div class="sidebar-item">
            <a href="/operating-room/nursing" class="sidebar-item-title pl-3">
                <i class="fa-sharp fa-solid fa-calendar-check mr-3"></i>Lịch hẹn tư vấn
            </a>
        </div>
        <div class="sidebar-item">
            <a href="/operating-room/nursing/re-examination" class="sidebar-item-title pl-3">
                <i class="fa-sharp fa-solid fa-calendar-plus mr-3"></i>Lịch hẹn tái khám
            </a>
        </div>
		<div class="sidebar-item">
            <a href="/operating-room/nursing/customers" class="sidebar-item-title pl-3">
                <i class="fa-sharp fa-solid fa-users mr-2"></i>Danh sách khách hàng
            </a>
        </div>
		<div class="sidebar-item">
            <a href="/operating-room/nursing/service-note" class="sidebar-item-title pl-3">
                <i class="fa-sharp fa-solid fa-receipt mr-3"></i>Danh sách hồ sơ khách hàng
            </a>
        </div>
		<div class="sidebar-item">
            <a href="/operating-room/nursing/discharge-from-hospital" class="sidebar-item-title pl-3">
				<i class="fa-sharp fa-solid fa-arrow-right-from-bracket mr-2"></i>Danh sách khách hàng xuất viện
            </a>
        </div>
    </div>
	<div class="offcanvas-footer border-top">
		<div class="sidebar-item border-bottom">
            <a href="/operating-room/nursing/storage-cus-info-done" class="sidebar-item-title pl-3">
				<i class="fa-sharp fa-solid fa-boxes-packing mr-3"></i>Kho lưu trữ hồ sơ
            </a>
        </div>
        <div class="sidebar-item">
            <a href="/operating-room/nursing/profile" class="sidebar-item-title pl-3">
                <i class="fa-sharp fa-solid fa-address-book mr-3"></i>Thông tin người dùng
            </a>
        </div>
		<div class="sidebar-item">
			<form method="POST" action="/logout">
				<button href="/logout" class="btn btn-danger logout-btn" type="submit">Đăng xuất</>
			</form>
		</div>
    </div>
</div>
<div class="sticky-top">
    <nav class="navbar navbar-light bg-blue border-bottom">
        <div class="img-container">
            <a type="button" href="/operating-room/nursing">
				<i class="fa-solid fa-circle-arrow-left text-light fs-3"></i>
			</a>
        </div>
        <div class="text-light text-uppercase fw-bold">
            {{this.title}}
        </div>
        <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasWithBackdrop" aria-controls="offcanvasWithBackdrop"><i
                class="ti-menu"></i>
        </button>
    </nav>
	{{!-- <div class="bg-blue p-2">
		<input type="text" id="search-service-note" class="form-control rounded-pill" placeholder="Tìm kiếm...">
	</div> --}}
</div>
<div class="mt-3 ml-3 mr-3">
	{{#if messages_createReExamination_success}}
	<div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
		{{messages_createReExamination_success}}
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
	{{/if}}
	<div class="row">
		{{#each serviceNoteDone}}
		<div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
			<div class="card mb-3 shadow text-white bg-glass">
				<div class="card-header bg-transparent d-flex justify-content-between">
					<div class="badge bg-danger lh-lg rounded-pill">{{this.status}}</div>
					<a class="text-light" href="/operating-room/nursing/service-note/{{this._id}}/detail">
						<i class="fa-solid fa-ellipsis"></i>
					</a>
				</div>
				<div class="card-body">
					<div class="d-flex justify-content-between">
						<label class="form-label text-light text-nowrap"><strong>Mã định danh:</strong></label>
						<p class="m-0 text-wrap text-right">
							{{this.scheduleID.customerID.identification}}
						</p>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label text-light text-nowrap"><strong>Khách hàng:</strong></label>
						<p class="m-0 text-wrap text-right">
							{{this.scheduleID.customerID.fullName}}
						</p>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label text-light"><strong>Giới tính:</strong></label>
						<div class="form-label">
							{{this.scheduleID.customerID.gender}}
						</div>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label text-light text-nowrap" for=""><strong>Số điện thoại:</strong></label>
						<div class="text-light form-label">
							0{{this.scheduleID.customerID.phone}}
						</div>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label text-light text-nowrap" for=""><strong>Đặt cọc:</strong></label>
						<div class="text-warning form-label">
							{{this.deposit}}
						</div>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label text-light text-nowrap" for=""><strong>Phí dịch vụ:</strong></label>
						<div class="text-danger form-label">
							{{this.total}}
						</div>
					</div>
				</div>
				{{!-- <div class="card-footer">
					<div class="row d-flex justify-content-between">
						<div class="col-xl-6 col-lg-12 col-md-12 col-sm-12">
							<button class="btn btn-primary btn-mobile rounded-pill mb-2 border" data-bs-toggle="modal" data-bs-target="#create-re-exam-modal" data-id="{{this._id}}"
							data-cusId="{{this.scheduleID.customerID._id}}" data-fullname="{{this.scheduleID.customerID.fullName}}" data-identification="{{this.scheduleID.customerID.identification}}"
							data-gender="{{this.scheduleID.customerID.gender}}" data-phone="{{this.scheduleID.customerID.phone}}">Tạo lịch tái khám</button>
						</div>
						<div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 text-right">
							<a class="btn btn-success btn-mobile rounded-pill mb-2 border" href='/operating-room/nursing/customer-information/{{this._id}}'>Hoàn thành</a>
						</div>
					</div>
				</div> --}}
			</div>
		</div>
		{{/each}}
	</div>
</div>
<!-- Modal -->
<div class="modal fade" id="create-re-exam-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header bg-blue">
				<h5 class="modal-title text-light" id="exampleModalLabel">Tạo lịch tái khám</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form id="create-re-exam-form" method="POST">
					<input id="submit-re-exam-cusId" type="text" name="cusID" hidden>
					<div class="d-flex justify-content-between">
						<label class="form-label text-nowrap"><strong>Mã định danh:</strong></label>
						<div id="submit-re-exam-identification" class="m-0 text-wrap" ></div>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label text-nowrap"><strong>Khách hàng:</strong></label>
						<div id="submit-re-exam-fullname" class="m-0 text-wrap" ></div>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label"><strong>Giới tính:</strong></label>
						<div id="submit-re-exam-gender" class="form-label"></div>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label text-nowrap" for=""><strong>Số điện thoại:</strong></label>
						<div id="submit-re-exam-phone" class="form-label"></div>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label text-nowrap" for=""><strong>Ngày hẹn:</strong></label>
						<div>
							<input type="datetime-local" id="submit-re-exam-schedule" class="form-control rounded-pill" name="schedule">
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Đóng</button>
				<button id="create-re-exam-btn" type="button" class="btn btn-primary rounded-pill">Tạo lịch</button>
			</div>
		</div>
	</div>
</div>
<script src="/js/operating/nursing-re-exam.js"></script>