<div class="m-16">
	{{#if serviceNote}}
	<div class="card bg-glass">
		<div class="card-body">
			<div class="tab-content" id="myTabContent">
				<div class="tab-pane fade show active" id="customer" role="tabpanel" aria-labelledby="home-tab">
					<form method="POST" id="submit-customer-form"
						action="/operating-room/nursing/customer-information/{{serviceNote._id}}/cus-info?_method=PUT">
						<input class="form-control bg-light" type="text"
							value="{{serviceNote.scheduleID.customerID._id}}" hidden name="cusID">
						<div class="row">
							<div class="col-md-3 form-floating mb-4">
								<input id="input-identification"
									class="form-control bg-transparent text-light text-right rounded-pill pr-4"
									value="{{serviceNote.scheduleID.customerID.identification}}" type="text"
									name="identification">
								<label for="input-identification" class="text-light pl-5">Mã định danh</label>
							</div>
							<div class="col-md-3 form-floating mb-4">
								<input id="input-fullname"
									class="form-control bg-transparent text-light text-right rounded-pill pr-4"
									value="{{serviceNote.scheduleID.customerID.fullName}}" type="text" name="fullName">
								<label for="input-fullname" class="text-light pl-5">Họ tên khai sinh</label>
							</div>
							<div class="col-md-3 form-floating mb-4">
								<input id="input-gender"
									class="form-control bg-transparent text-light text-right rounded-pill pr-4"
									value="{{serviceNote.scheduleID.customerID.birth}}" type="date"
									value="{{serviceNote.scheduleID.customerID.birth}}" name="birth">
								<label for="input-gender" class="text-light pl-5">Ngày sinh</label>
							</div>
							<div class="col-md-3 form-floating mb-4">
								<select class="form-select bg-transparent text-light text-right rounded-pill pr-4"
									id="select-gender" name="gender">
									<option class="bg-blue text-light" selected>{{getGender
										serviceNote.scheduleID.customerID.gender}}</option>
									<option class="bg-blue text-light" value="Nam">Nam</option>
									<option class="bg-blue text-light" value="Nữ">Nữ</option>
								</select>
								<label for="select-gender" class="text-light pl-5">Giới tính</label>
							</div>
						</div>
						<div class="row">
							<div class="col-md-3 form-floating mb-4">
								<input id="input-phone"
									class="form-control bg-transparent text-light text-right rounded-pill pr-4"
									type="text" value="{{serviceNote.scheduleID.customerID.phone}}" name="phone">
								<label for="input-phone" class="text-light pl-5">Số điện thoại</label>
							</div>
							<div class="col-md-3 form-floating mb-4">
								<input id="input-home-town"
									class="form-control bg-transparent text-light text-right rounded-pill pr-4"
									value="{{serviceNote.scheduleID.customerID.homeTown}}" type="text" name="homeTown">
								<label for="input-home-town" class="text-light pl-5">Quê quán</label>
							</div>
							<div class="col-md-3 form-floating mb-4">
								<input id="input-height"
									class="form-control bg-transparent text-light text-right rounded-pill pr-4"
									value="{{serviceNote.scheduleID.customerID.height}}" type="text" name="height">
								<label for="input-height" class="text-light pl-5">Chiều cao</label>
							</div>
							<div class="col-md-3 form-floating mb-4">
								<input id="input-weight"
									class="form-control bg-transparent text-light text-right rounded-pill pr-4"
									value="{{serviceNote.scheduleID.customerID.weight}}" type="text" name="weight">
								<label for="input-weight" class="text-light pl-5">Cân nặng</label>
