<div class="row bg-dark">
    {{> page/sidebar/admin/sidebar-admin}}
    <div class="content">
        <div class="container-fluid mt-3">
            <div class="container mt-3">
                <form method="POST" class="text-light">
                    <div class="row">
                        <div class="form-group mr-3 ml-3">
                            <label for="first-name">Họ</label>
                            <input type="text" class="form-control form-control-sm" id="first-name" name="firstName" placeholder="Nhập 'Họ'">
                        </div>
                        <div class="form-group mr-3">
                            <label for="middle-name">Tên đệm</label>
                            <input type="text" class="form-control form-control-sm" id="middle-name" name="middleName" placeholder="Nhập 'Tên đệm'">
                        </div>
                        <div class="form-group">
                            <label for="last-name">Tên</label>
                            <input type="text" class="form-control form-control-sm" id="last-name" name="lastName" placeholder="Nhập 'Tên'">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mr-3 ml-3">
                            <label for="birth">Ngày sinh</label>
                            <input type="date" class="form-control form-control-sm" id="birth" name="birth" min="01/01/2006" max="01/01/1977">
                        </div>
                        <div class="form-group">
                            <label for="gender">Giới tính</label>
                            <select class="form-control form-control-sm" id="gender" name="gender">
                                <option>-- Chọn giới tính --</option>
                                <option value="male">Nam</option>
                                <option value="female">Nữ</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mr-3 ml-3">
                            <label for="phone">Số điện thoại</label>
                            <input type="number" class="form-control form-control-sm" id="phone" name="phone" placeholder="Nhập số điện thoại">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="email" class="form-control form-control-sm" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="Nhập email">
                        </div>
                    </div>
                    
                        <div class="form-group">
                            <label for="address">Địa chỉ</label>
                            <input type="text" class="form-control form-control-sm" id="address" name="address" placeholder="Nhập địa chỉ">
                        </div>
                    
                    <div class="row">
                        <div class="form-group mr-3 ml-3">
                            <label for="department">Phòng ban</label>
                            <select class="form-control form-control-sm" id="department" name="role_id">
                                <option>-- Chọn phòng ban --</option>
                                {{#each departments}}
                                <option value="{{this.name}}" class="department-opt">{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="role">Chức vụ</label>
                            <select class="form-control form-control-sm" id="role" name="roleEngName">
                                <option value="">-- Chọn chức vụ --</option>
                                {{#each roles}}
                                <option value="{{this.name}}" class="department-opt">{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </form>
                <div class="form=group d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </div>
            <table class="table table-hover text-light mt-3">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Mã người dùng</th>
                        <th scope="col">Họ tên</th>
                        <th scope="col">Ngày sinh</th>
                        <th scope="col">Giới tính</th>
                        <th scope="col">Số điện thoại</th>
                        <th scope="col">Email</th>
                        <th scope="col">Địa chỉ</th>
                        <th scope="col">Phòng ban</th>
                        <th scope="col">Chức vụ</th>
                        <th scope="col">Tài khoản</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <th scope="row">{{sum @index 1}}</th>
                        <td>{{this._id}}</td>
                        <td>{{this.firstName}}{{this.middleName}}{{this.lastName}}</td>
                        <td>{{this.birth}}</td>
                        <td>{{this.gender}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.address}}</td>
                        <td>{{this.department_id}}</td>
                        <td>{{this.role_id}}</td>
                        <td>{{this.account_id}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

