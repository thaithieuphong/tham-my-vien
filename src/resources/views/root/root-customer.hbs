<link rel="stylesheet" href="/css/root.css">
<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasWithBackdrop"
    aria-labelledby="offcanvasWithBackdropLabel">
    <div class="offcanvas-header bg-dark border-bottom">
        <h5 class="offcanvas-title text-white" id="offcanvasWithBackdropLabel">BẢNG ĐIỀU KHIỂN</h5>
        <button type="button" class="btn-close text-reset btn-light" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body container-sidebar bg-dark">
        <div class="sidebar-item">
            <a href="/god/dashboard" class="sidebar-item-title pl-3">
                <i class="ti-dashboard mr-3"></i>Bảng điều khiển
            </a>
        </div>
		<div class="sidebar-item">
            <a href="/god/user" class="sidebar-item-title pl-3">
                <i class="ti-user mr-3"></i>Phòng nhân sự
            </a>
        </div>
        <div class="sidebar-item">
            <a href="/god/operating-room" class="sidebar-item-title pl-3">
                <i class="ti-cut mr-3"></i>Phòng phẩu thuật
            </a>
        </div>
        <div class="sidebar-item">
            <a href="/god/reception" class="sidebar-item-title pl-3">
                <i class="ti-clipboard mr-3"></i>Phòng lễ tân
            </a>
        </div>
        <div class="sidebar-item">
            <a href="/god/business" class="sidebar-item-title pl-3">
                <i class="ti-headphone-alt mr-3"></i>Phòng kinh doanh
            </a>
        </div>
        <div class="sidebar-item">
            <a href="/god/marketing" class="sidebar-item-title pl-3">
                <i class="ti-bar-chart mr-3"></i>Phòng marketing
            </a>
        </div>
        <div class="sidebar-item">
            <a href="#" class="sidebar-item-title pl-3">
                <i class="ti-server mr-3"></i>Phòng IT
            </a>
        </div>
        <div class="sidebar-item">
            <a href="/god/setting" class="sidebar-item-title pl-3">
                <i class="ti-settings mr-3"></i>Cài đặt
            </a>
        </div>
    </div>
</div>
<div class="sticky-top">
    <nav class="navbar navbar-light bg-dark d-flex justify-content-between">
        <div class="img-container">
            {{!-- {{#if user.image.name}}
            <a class="text-light" href="/god/profile">{{user.firstName}} {{user.lastName}}<img
                    class="ml-2 mr-3" src="/img/uploads/users/{{user.image.name}}" alt=""></a>
            {{else}}
            <a class="text-light" href="/god/profile">{{user.firstName}} {{user.lastName}}<img
                    class="ml-2 mr-3" src="/img/user-icon.png" alt=""></a>
            {{/if}} --}}
        </div>
        <div class="text-light text-uppercase">{{title}}</div>
        <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasWithBackdrop" aria-controls="offcanvasWithBackdrop"><i
                class="ti-angle-double-right"></i>
        </button>
    </nav>
</div>
<div class="container-fluid">
    <nav class="pt-2 float-left">
        <div class="btn-group" role="group" aria-label="Basic example">
            <a id="filter" class="btn btn-danger text-light"><i class="ti-trash me-2"></i>Kho lưu trữ</a>
        </div>
	</nav>
    <table id="customerTable" class="table table-hover table-sm table-bordered table-sm">
        <thead>
            <tr class="text-light bg-primary">
                <th scope="col">#</th>
                <th scope="col">Mã KH</th>
                <th scope="col">Mã Định danh</th>
                <th scope="col">Họ tên khai sinh</th>
                <th scope="col">Tên thường gọi</th>
                <th scope="col">Ngày sinh</th>
                <th scope="col">Giới tính</th>
                <th scope="col">Điện thoại</th>
                <th scope="col">Hành động</th>  
            </tr>
        </thead>
        <tbody>
            {{#each customers}}
            <tr class="text-light text-nowrap">
                <th scope="row">{{sum @index 1}}</th>
                <td><img class="w-46 h-46 rounded-circle border mr-3" src="/img/uploads/customers/user-ray.png" alt=""><a href="/god/customer/{{this._id}}/detail">{{this._id}}</a></td>
                {{!-- <td><img src="/img/uploads/customers/{{this.image.name}}" alt="">{{this._id}}</td> --}}
                {{!-- <td><img src="{{this.image.url}}" alt="">{{this._id}}</td> --}}
                <td>{{this.identification}}</td>
                <td>{{this.fullName}}</td>
                <td>{{this.nickName}}</td>
                <td>{{formatBirth this.birth}}</td>
                <td>{{this.gender}}</td>
                <td>{{this.phone}}</td>
                <td class="text-center">
                    <button type="button" class="btn btn-info btn-sm border" data-bs-toggle="modal"
                        data-bs-target="#edit-customer-modal" data-id="{{this._id}}"
                        data-edit-img="{{this.image.name}}" data-edit-nickname="{{this.nickName}}"
                        data-edit-statusCus="{{this.statusCus.statusVi}}" data-edit-birth="{{this.birth}}"
                        data-edit-gender="{{this.gender}}" data-edit-phone="{{this.phone}}"
                        data-edit-email="{{this.email}}" data-edit-address="{{this.address}}"
                        data-edit-resource="{{this.resource}}"
                        data-edit-description="{{this.description}}">
                        <div data-bs-toggle="tooltip" data-bs-placement="top" title="Sửa thông tin khách hàng">
                            <i class="ti-pencil-alt"></i>
                        </div>
                    </button>
                    <button class="btn btn-primary border btn-sm" data-bs-toggle="dropdown" aria-expanded="false">
                        <div data-bs-toggle="tooltip" data-bs-placement="top" title="Chuyển trạng thái">
                            <i class="fa-solid fa-arrow-right-arrow-left"></i>
                        </div>
                    </button>
                    <button class="btn btn-primary border btn-sm" data-bs-toggle="dropdown" aria-expanded="false">
                        <div data-bs-toggle="tooltip" data-bs-placement="top" title="Chuyển trạng thái">
                            <i class="fa-solid fa-arrow-right-arrow-left"></i>
                        </div>
                    </button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<script src="/js/root/root.js"></script>
