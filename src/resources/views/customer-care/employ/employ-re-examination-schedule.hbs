				<table id="table-re-exam-schedule" class="table table-hover mb-0 table-sm table-bordered">
					<thead>
						<tr class="text-center">
							<th scope="col">#</th>
							<th scope="col">Mã KH</th>
							<th scope="col">Họ tên khai sinh</th>
							<th scope="col">Tên thường gọi</th>
							<th scope="col">Ngày sinh</th>
							<th scope="col">Số điện thoại</th>
							<th scope="col">Trạng thái</th>
							<th scope="col">Số lần tái khám</th>
							<th scope="col">Ngày hẹn</th>
							<th scope="col">Hành động</th>
						</tr>
					</thead>
					<tbody>
						{{#each reExamSchedule}}
							<tr class="text-value">
								<th class="text-center" scope="row">{{sum @index 1}}</th>
								<td class="text-identify">{{this.cusID.identification}}</td>
								<td class="text-fullName">
									<a class="fullName-link text-primary" data-bs-toggle="modal" data-bs-target="#detail-re-exam-schedule-modal"
									data-identification="{{this.cusID.identification}}" data-fullName="{{this.cusID.fullName}}" data-nickName="{{this.cusID.nickName}}"
									data-gender="{{this.cusID.gender}}" data-birth="{{this.cusID.birth}}" data-phone="{{this.cusID.phone}}" data-times="{{this.times}}"
									data-schedule="{{this.schedule}}" data-surgeryDay="{{this.serviceNoteID.surgeryDay}}">
										{{this.cusID.fullName}}
									</a>
								</td>
								<td class="text-nickName">{{this.cusID.nickName}}</td>
								<td>{{formatBirth this.cusID.birth}}</td>
								<td class="text-phone">0{{this.cusID.phone}}</td>
								<td class="text-status">{{this.status}}</td>
								<td class="text-times text-center">{{this.times}}</td>
								<td class="text-schedule">{{formatDate this.schedule}}</td>
								<td class="text-center">
									<div class="inline p-0" data-bs-toggle="tooltip" data-bs-placement="top" title="Sửa lịch hẹn tái khám">
										<button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#edit-re-exam-schedule-modal"
											data-edit-re-exam-schedule-id="{{this._id}}" data-edit-re-exam-schedule-cusID="{{this.cusID._id}}"
											data-edit-re-exam-schedule-fullName="{{this.cusID.fullName}}"
											data-edit-re-exam-schedule-nickName="{{this.cusID.nickName}}"
											data-edit-re-exam-schedule-gender="{{this.cusID.gender}}"
											data-edit-re-exam-schedule-phone="{{this.cusID.phone}}">
											<i class="fa-sharp fa-solid fa-square-pen"></i> Sửa lịch hẹn tái khám
										</button>
									</div>
									<div class="inline p-0" data-bs-toggle="tooltip" data-bs-placement="top" title="Tạo phiếu tái khám">
										<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#create-re-exam-modal"
											data-create-re-exam-schedule-id="{{this._id}}" data-create-re-exam-cusID="{{this.cusID._id}}"
											data-create-re-exam-fullName="{{this.cusID.fullName}}" data-create-re-exam-serviceNoteID="{{this.serviceNoteID._id}}">
											<i class="fa-sharp fa-solid fa-plus"></i> Tạo phiếu tái khám
										</button>
									</div>
									<div  class="inline p-0" data-bs-toggle="tooltip" data-bs-placement="top" title="Hủy lịch hẹn">
										<button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#delete-re-exam-schedule-modal" data-re-exam-schedule-id="{{this._id}}"
