        </div>
        <div class="col d-flex flex-column h-sm-100 ps-0 pe-0 overflow-auto">
			<div class="text-center bg-blue-logo sticky-top d-flex justify-content-between">
				<div class="img-container p-2">
					<a type="button" onclick="history.back()">
						<i class="fa-solid fa-circle-arrow-left text-light ms-1 fs-3"></i>
					</a>
				</div>
				<div class="text-light text-uppercase fw-bold pt-2 pb-2">
					{{this.title}}
				</div>
				<div></div>
			</div>
			<div class="container-fluid">
				<nav class="p-2 float-right">
					<div class="btn-group" role="group" aria-label="Basic example">
						<input id="search-surgeryDay" type="date" class="form-control">
						<button id="filter" class="btn btn-outline-secondary"><i class="ti-filter"></i></button>
					</div>
					<div class="btn-group" role="group" aria-label="Basic example">
						<input id="search-table" class="form-control" type="text" placeholder="Tìm kiếm...">
					</div>
				</nav>
				<table id="table-customer" class="table table-hover table-bordered table-sm">
					<thead>
						<tr class="text-nowrap">
							<th class="text-center" scope="col">#</th>
							<th class="text-center" scope="col">Ngày phẫu thuật</th>
							<th class="text-center" scope="col">Mã khách hàng</th>
							<th class="text-center" scope="col">Họ tên khai sinh</th>
							<th class="text-center" scope="col">Tên thường gọi</th>
							<th class="text-center" scope="col">Giới tính</th>
							<th class="text-center" scope="col">Số điện thoại</th>
							<th class="text-center" scope="col">Trạng thái</th>
							<th class="text-center" scope="col">Tác vụ</th>
						</tr>
					</thead>
					<tbody id="table-content">
						{{#each serviceNotes}}
						<tr class="text-nowrap text-value">
							<th class="text-center">{{sum @index 1}}</th>
							<td class="text-identify">{{formatBirth this.surgeryDay}}</td>
							<td class="text-identify">{{this.scheduleID.cusID.identification}}</td>
							<td class="text-fullName">{{this.scheduleID.cusID.fullName}}</td>
							<td class="text-nickName">{{this.scheduleID.cusID.nickName}}</td>
							<td class="">{{this.scheduleID.cusID.gender}}</td>
							<td class="text-phone">0{{this.scheduleID.cusID.phone}}</td>
							<td class="text-status">{{this.status}}</td>
							<td class="text-center">
								<div class="inline p-0" data-bs-toggle="tooltip" data-bs-placement="top" title="Tạo lịch thay băng">
									<button class="btn btn-primary btn-sm" type="button" data-bs-toggle="modal" data-bs-target="#create-wound-cleaning-schedule-modal-customer-care"
									data-id="{{this._id}}" data-cusId="{{this.scheduleID.cusID._id}}" data-identification="{{this.scheduleID.cusID.identification}}"
									data-fullName="{{this.scheduleID.cusID.fullName}}" data-nickName="{{this.scheduleID.cusID.nickName}}" data-gender="{{this.scheduleID.cusID.gender}}"
									data-phone="{{this.scheduleID.cusID.phone}}">
										<i class="fa-sharp fa-solid fa-calendar-plus"></i> Tạo lịch thay băng
									</button>
								</div>
								<div class="inline p-0" data-bs-toggle="tooltip" data-bs-placement="top" title="Chuyển sang tái khám định kỳ">
									<button type="button" data-bs-toggle="modal" data-bs-target="#move-to-re-exam-modal"
										class="btn btn-success btn-sm moveToReExamBtn" data-customer-id="{{this.scheduleID.cusID._id}}" data-cutomer-fullName="{{this.scheduleID.cusID.fullName}}"
										data-service-note-id="{{this._id}}">
										<i class="fa-sharp fa-solid fa-circle-check"></i> Chuyển sang tái khám định kỳ
									</button>
								</div>
							</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="create-wound-cleaning-schedule-modal-customer-care" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header bg-blue-logo">
				<h5 class="modal-title text-light" id="exampleModalLabel">Tạo lịch thay băng</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form id="create-wound-cleaning-schedule-form-customer-care" method="POST">
					<input id="create-wound-cleaning-schedule-cusId-customer-care" type="text" name="cusID" hidden>
					<div class="d-flex justify-content-between">
						<label class="form-label text-nowrap"><strong>Mã khách hàng:</strong></label>
						<div id="create-wound-cleaning-schedule-identification-customer-care" class="m-0 text-wrap" ></div>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label text-nowrap"><strong>Họ tên khai sinh:</strong></label>
						<div id="create-wound-cleaning-schedule-fullname-customer-care" class="m-0 text-wrap" ></div>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label text-nowrap"><strong>Tên thường gọi:</strong></label>
						<div id="create-wound-cleaning-schedule-nickname-customer-care" class="m-0 text-wrap" ></div>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label"><strong>Giới tính:</strong></label>
						<div id="create-wound-cleaning-schedule-gender-customer-care" class="form-label"></div>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label text-nowrap" for=""><strong>Số điện thoại:</strong></label>
						<div id="create-wound-cleaning-schedule-phone-customer-care" class="form-label"></div>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label text-nowrap" for=""><strong>Số lần tái khám:</strong></label>
						<div>
							<input type="text" name="times" id="" class="form-control form-control-sm text-right" placeholder="Vd: 1">
						</div>
					</div>
					<div class="d-flex justify-content-between">
						<label class="form-label text-nowrap" for=""><strong>Ngày hẹn:</strong></label>
						<div>
							<input type="datetime-local" id="create-wound-cleaning-schedule-schedule-customer-care" class="form-control" name="schedule">
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button id="create-wound-cleaning-schedule-btn-customer-care" type="button" class="btn btn-primary btn-sm">Tạo lịch</button>
				<button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Đóng</button>
			</div>
		</div>
	</div>
</div>

{{!-- Move to Re-examination --}}
<div class="modal fade" id="move-to-re-exam-modal" tabindex="-1" aria-labelledby="move-to-re-exam-label" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header bg-success">
				<h5 class="modal-title text-light" id="move-to-re-exam-label">Chuyển khách hàng sang tái khám định kỳ</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form method="POST" id="move-to-re-exam-form">
					<input type="text" name="cusID" id="move-to-re-exam-cusID" hidden>
					<input type="text" name="fullName" id="move-to-re-exam-fullName" hidden>
