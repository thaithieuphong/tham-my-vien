										</a>
									</div>
									<div class="inline p-0" data-bs-toggle="tooltip" data-bs-placement="top" title="Hoàn thành thay băng">
										<button type="button" data-bs-toggle="modal" data-bs-target="#submit-wound-cleaning-modal-done"
											class="btn btn-success btn-sm" data-wound-cleaning-id="{{this._id}}" data-wound-cleaning-customer-id="{{this.cusID._id}}" data-wound-cleaning-cutomer-fullName="{{this.cusID.fullName}}"
											data-wound-cleaning-serviceNoteID="{{this.serviceNoteID}}" data-wound-cleaning-woundCleaningScheduleID="{{this.woundCleaningScheduleID}}">
											<i class="fa-sharp fa-solid fa-circle-check"></i> Hoàn thành thay băng
										</button>
									</div>
									<div  class="inline p-0" data-bs-toggle="tooltip" data-bs-placement="top" title="Xóa phiếu thay băng">
										<button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#delete-wound-cleaning-modal" data-wound-cleaning-id="{{this._id}}"
										data-wound-cleaning-customer-fullname="{{this.cusID.fullName}}" data-wound-cleaning-customer-id="{{this.cusID._id}}" data-wound-cleaning-serviceNoteID="{{this.serviceNoteID}}"
										data-wound-cleaning-woundCleaningScheduleID="{{this.woundCleaningScheduleID}}">
											<i class="ti-close"></i>
										</button>
									</div>
								</td>
							</tr>
						{{/each}}
					</tbody>
				</table>
