					<thead>
						<tr class="text-center">
							<th scope="col">#</th>
							<th scope="col">Mã KH</th>
							<th scope="col">Họ tên khai sinh</th>
							<th scope="col">Tên thường gọi</th>
							<th scope="col">Ngày sinh</th>
							<th scope="col">Số điện thoại</th>
							<th scope="col">Trạng thái</th>
							<th scope="col">Hành động</th>
						</tr>
					</thead>
					<tbody>
						{{#each woundCleaning}}
							<tr class="text-value">
								<th class="text-center" scope="row">{{sum @index 1}}</th>
								<td class="text-identify">{{this.cusID.identification}}</td>
								<td class="text-fullName">
									<a class="fullName-link" href="/customer-care/employ/wound-cleaning/{{this._id}}/detail">
